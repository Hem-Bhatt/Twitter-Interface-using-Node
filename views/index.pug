      .grid-33
        .app--section
          ul.app--user--list
            - for (var i=0; i<5; i++)
                li
                  .circle--fluid
                    .circle--fluid--cell.circle--fluid--primary
                      a.app--tweet--author
                        .app--avatar(style=`background-image: url(${followerProfileImg[i]})`)
                          img(src=`${followerProfileImg[i]}`)
                        h4 #{followerName[i]}
                        p @#{followerScreenName[i]}
                    .circle--fluid--cell
                      a.button.button-text Unfollow

      .grid-33
        .app--section
          ul.app--message--list
            li
              h3
                | Conversation with
                a #{realName}
              ul.app--message--conversation
                - for (var i=0; i<5; i++)
                    li.app--message
                      .app--avatar(style=`background-image: url(${senderPhoto[i]})`)
                        img(src='images/f-spore.png')
                      p.app--message--text #{dmText[i]}
                      p.app--message--timestamp #{dateTime[i]}
