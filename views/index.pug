    .app--tweet
      form
        .circle--fluid
          .circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
            .app--avatar(style=`background-image: url(${profileImg[0]})`)
              img(src='images/m-spore.png')
            textarea#tweet-textarea.circle--textarea--input(placeholder="What's happening?")
            strong#tweet-char.app--tweet--char 140
          .circle--fluid--cell.align-bottom
            button.button-primary Tweet
    .bounds.app--body
      .app--section--header
        .grid-33
          .app--section--heading
            h2 Timeline
        .grid-33
          .app--section--heading
            strong 129
            h2 Following
        .grid-33
          .app--section--heading
            h2 Direct Messages
      .grid-33
        .app--section
          ul.app--tweet--list
            - for (var i=0; i<5; i++)
                li
                  strong.app--tweet--timestamp 4h
                  a.app--tweet--author
                    .app--avatar(style=`background-image: url(${profileImg[i]})`)
                      img(src=`${profileImg[i]}`)
                    h4 #{names[i]}
                    |  @#{screenName[i]}
                  p #{tweetContent[i]}
                  ul.app--tweet--actions.circle--list--inline
                    li
                      a.app--reply
                        span.tooltip Reply
                        svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewbox='0 0 38 28', xml:space='preserve')
